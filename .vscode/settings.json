{
  "markdownlint.config": {
    "default": true,
    "MD013": {
      "line_length": 120,
      "code_blocks": false,
      "tables": false
    },
    "MD033": {
      "allowed_elements": ["details", "summary", "br"]
    },
    "MD041": false
  },
  "files.associations": {
    "*.md": "markdown"
  },
  "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  }
}
